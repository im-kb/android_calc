<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">200px</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">18dp</item>
        <!--        <item name="android:textStyle">bold</item>-->
    </style>


    <style name="resultBottom">
        <item name="android:background">#BDBDBD</item>
        <item name="android:gravity">center|right</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="resultTop">
        <item name="android:background">#00000000</item>
        <item name="android:gravity">bottom|right</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="buttonStyleInside">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">200px</item>
        <item name="android:background">#757575</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">18dp</item>
        <!--        <item name="android:textStyle">bold</item>-->
    </style>
    <style name="buttonStyleOutside">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">200px</item>
        <item name="android:background">#FF7043</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">26dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
